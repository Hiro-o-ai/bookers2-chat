
<div class="container">
	<p class="message"><%= notice %></p>
	<div class="row">
		<div class="col-xs-3">
			<%= render "users/list", user: @user %>

			<% unless @user.id == current_user.id %>
			    <%= link_to "チャットへGo!", chat_path(@user.id) %>
			<% end %>

			<%= render "books/new", book: @bookn %>
		</div>
		<div class="col-xs-9">
			<h3>Books</h3>
			<table class="table table-hover">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
						<th></th>
						<th></th>
						<th></th>
					</tr>
				</thead>
				<% @books.each do |book| %>
					<tbody>
						<tr class="book_<%= book.id %>">
							<%= render "books/list", book: book %>
						</tr>
					</tbody>
				<% end %>
			</table>
		</div>
	</div>
</div>